<h1>Sign In</h1>

<%= form_for :user, url: sessions_path do |f| %>
<div class="field">
    <%#= f.select("id", User.all.collect {|u| [ u.name, u.id ] }, { prompt: "Choose Your Name" }) %>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div class="field">
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
</div>
<div class="actions">
    <%= f.submit "Sign In" %>
</div>
<% end %>